@using Microsoft.AspNetCore.Identity
@inject SignInManager<IdentityUser> SignInManager
@inject UserManager<IdentityUser> UserManager

<ul class="navbar-nav">
@if (SignInManager.IsSignedIn(User))
{

        <a  class="BTN BTNOK" asp-area="Identity" asp-page="/Account/Manage/Index" title="Manage">Hello @User.Identity.Name!</a>
        
        <form asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="@Url.Page("/", new { area = "" })" method="post" >
            <button class="BTN BTNCancel" type="submit">Logout</button>
        </form>
}
else
{ 

        <a class="BTN BTNOK" asp-page="/Account/Register">Register</a>
        <a class="BTN BTNOK2" asp-page="/Account/Login">Login</a>

}
</ul>
